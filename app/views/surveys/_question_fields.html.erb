<script>
$(document).ready(function() {
  $('#questionModal').on('show.bs.modal', function(event) {
    var link = $(event.relatedTarget);
    var partialName = link.data('render-partial');
    var modal = $(this);
    modal.find('.modal-body').load(partialName);
  });
});

</script>




