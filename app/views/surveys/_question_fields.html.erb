<div class="nested-fields" >
  <div class="mb-3">
    <%= f.label :question_name %>
    <%= f.text_field :statement,  class:"form-control", placeholder: "enter your question" %>
  </div>

  <div class="mb-3">

    <%= f.label :answer %>
      <%= f.text_field :open ,class:"form-control", placeholder: "answer" %>
  </div>
  <%= link_to_remove_association "remove Question", f, class:"btn btn-primary" %>

</div>

<div class="nested-fields">
<div class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
        <div class="modal-body">
                <div class="mb-3">
                    <%= f.label :question_name %>
                    <%= f.text_field :statement,  class:"form-control", placeholder: "enter your question" %>
                </div>

                <div class="mb-3">
                  <%= f.label :answer %>
                  <%= f.text_field :open ,class:"form-control", placeholder: "answer" %>
                </div>
                 <%= link_to_remove_association "remove Question", f, class:"btn btn-primary" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
</div>



