<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end%>

<% if flash[:alert] %>
  <%= flash[:alert] %>
<% end %>


<h1> New Survey </h1>

<div class="container" >
  <div class="col-12" >
    <%= form_with model:@survey ,url: survey_path do |form| %>

    <div class="mb-3">
      <%= form.label :Survey_name %>
      <%= form.text_field :title  , class:"form-control"%>
    </div>

    <div class = "mb-3">
      <%= form.label :Survey_Script %>
      <%= form.text_field :script , class:"form-control" %>
    </div>


    <% form.fields_for :questions do |f| %>
      <%=  render "question_fields", f: f %>
    <% end %>

    <%= link_to_add_association "Add question", form, :questions , class:"btn btn-primary my-3" %>

    <div class = "mb-3">
      <%= form.submit "Publish",class:"btn btn-primary btngry" %>
      <%= link_to "Cancle",root_path, class:"btn btn-primary" %><!-- add btngry to css class -->

      <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Launch demo modal
    </button>

<!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
                  <% form.fields_for :questions do |f| %>
                    <%=  render "question_fields", f: f %>
                  <% end %>
          </div>
          <%= link_to_add_association "Add question", form, :questions , class:"btn btn-primary my-3" %>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>

    <% end %>



  </div>
</div>
